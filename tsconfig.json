{
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "es2020"
        ],
        "typeRoots": ["node_modules/@types"],
        "importHelpers": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "incremental": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2020",
        "sourceMap": true,
        "outDir": "dist",
        "pretty": true,
        "baseUrl": "src",
        "skipLibCheck": true,
        "noEmit": false,
        "paths": {
            "@/*": ["*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
