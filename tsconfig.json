{
    "compilerOptions": {
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "preserveWatchOutput": true,
        "noEmit": true,
        "module": "commonjs",
        "target": "es2021",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src",
        "paths": {
            "~/*": [
                "*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
